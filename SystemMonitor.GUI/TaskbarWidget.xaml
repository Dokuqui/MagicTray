<Window x:Class="SystemMonitor.GUI.TaskbarWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="240"
        Height="80">

	<Border CornerRadius="12"
            Background="#202020"
            Opacity="0.9"
            Padding="12"
            BorderBrush="#333333"
            BorderThickness="1">

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- CPU Section -->
			<StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
				<TextBlock Text="CPU" FontSize="10" Foreground="#AAAAAA"/>
				<TextBlock Text="{Binding CpuUsage}"
                           Foreground="{Binding CpuColor}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
			</StackPanel>

			<!-- GPU1 Section -->
			<StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
				<TextBlock Text="GPU1" FontSize="10" Foreground="#AAAAAA"/>
				<TextBlock Text="{Binding Gpu1Usage}"
                           Foreground="{Binding Gpu1Color}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
			</StackPanel>

			<!-- GPU2 Section -->
			<StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
				<TextBlock Text="GPU2" FontSize="10" Foreground="#AAAAAA"/>
				<TextBlock Text="{Binding Gpu2Usage}"
                           Foreground="{Binding Gpu2Color}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
			</StackPanel>

			<!-- Separator -->
			<Rectangle Grid.Column="0"
                       Width="1"
                       Margin="6 0"
                       Fill="#404040"
                       HorizontalAlignment="Right"/>
			<Rectangle Grid.Column="1"
                       Width="1"
                       Margin="6 0"
                       Fill="#404040"
                       HorizontalAlignment="Left"/>
			<Rectangle Grid.Column="2"
                       Width="1"
                       Margin="6 0"
                       Fill="#404040"
                       HorizontalAlignment="Left"/>
		</Grid>

		<Border.Effect>
			<DropShadowEffect BlurRadius="12"
                            Color="#111111"
                            ShadowDepth="0"/>
		</Border.Effect>

		<Border.Triggers>
			<EventTrigger RoutedEvent="MouseEnter">
				<BeginStoryboard>
					<Storyboard>
						<DoubleAnimation To="1.0"
                                         Duration="0:0:0.15"
                                         Storyboard.TargetProperty="Opacity"/>
					</Storyboard>
				</BeginStoryboard>
			</EventTrigger>
			<EventTrigger RoutedEvent="MouseLeave">
				<BeginStoryboard>
					<Storyboard>
						<DoubleAnimation To="0.9"
                                         Duration="0:0:0.3"
                                         Storyboard.TargetProperty="Opacity"/>
					</Storyboard>
				</BeginStoryboard>
			</EventTrigger>
		</Border.Triggers>
	</Border>
</Window>
