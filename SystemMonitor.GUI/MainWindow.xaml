<Window x:Class="SystemMonitor.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowState="Minimized"
        SizeChanged="Window_SizeChanged">
	<Grid>
		<StackPanel VerticalAlignment="Center" Margin="20">
			<TextBlock Text="CPU Usage" FontSize="20" HorizontalAlignment="Center"/>

			<Border Width="360" Height="120" Margin="20">
				<Grid>
					<Canvas x:Name="CpuGraphCanvas"
                            Background="#1E1E1E"
                            ClipToBounds="True"/>

					<TextBlock Text="{Binding CpuUsageText}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="0,5,5,0"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"/>
				</Grid>
			</Border>

			<Button Content="Settings" Margin="0 20" Width="100" Click="OpenSettings"/>
		</StackPanel>
	</Grid>
</Window>