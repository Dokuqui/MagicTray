<Window x:Class="SystemMonitor.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowState="Minimized"
        SizeChanged="Window_SizeChanged">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
			<Border Background="#202020" CornerRadius="5" Margin="5" Padding="15">
				<StackPanel>
					<TextBlock Text="CPU" FontSize="16" Foreground="White"/>
					<TextBlock Text="{Binding CpuUsageText}" FontSize="24" Foreground="LimeGreen"/>
				</StackPanel>
			</Border>

			<Border Background="#202020" CornerRadius="5" Margin="5" Padding="15">
				<StackPanel>
					<TextBlock Text="GPU" FontSize="16" Foreground="White"/>
					<TextBlock Text="{Binding GpuUsageText}" FontSize="24" Foreground="DodgerBlue"/>
					<TextBlock Text="{Binding GpuTempText}" FontSize="12" Foreground="#AAAAAA"/>
				</StackPanel>
			</Border>
		</StackPanel>

		<!-- Graphs Container -->
		<Grid Grid.Row="1" Margin="20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- CPU Graph -->
			<Border Grid.Column="0" Margin="5">
				<Grid>
					<Canvas x:Name="CpuGraphCanvas" Background="#1E1E1E" ClipToBounds="True"/>
					<TextBlock Text="{Binding CpuUsageText}"
                               HorizontalAlignment="Right" VerticalAlignment="Top"
                               Margin="0,5,5,0" Foreground="White" FontSize="14"/>
				</Grid>
			</Border>

			<!-- GPU Graph -->
			<Border Grid.Column="1" Margin="5">
				<Grid>
					<Canvas x:Name="GpuGraphCanvas" Background="#1E1E1E" ClipToBounds="True"/>
					<TextBlock Text="{Binding GpuUsageText}"
                               HorizontalAlignment="Right" VerticalAlignment="Top"
                               Margin="0,5,5,0" Foreground="White" FontSize="14"/>
				</Grid>
			</Border>
		</Grid>

		<!-- Settings Button -->
		<Button Grid.Row="2" Content="Settings" Margin="0 20" Width="100"
                HorizontalAlignment="Center" Click="OpenSettings"/>
	</Grid>
</Window>
